<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button> 
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="justify-content: space-between">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div>
        <% if ((users) && (users.email !== undefined)) { %>
          <form method="POST" action="/logout">
            <span style="color:whitesmoke"> Logged in as: <%=users.email%></span> 
            <button type="submit" style="color:green">Logout</button>
          </form>
          <% } else { %>
        <form method="GET" action="/login" style="float: left">
          <button type="submit" class="btn btn-success">Login</button>
        </form>
        <form method="GET" action="/register" style="float: right">
          <button type="submit" class="btn btn-success">Register</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>